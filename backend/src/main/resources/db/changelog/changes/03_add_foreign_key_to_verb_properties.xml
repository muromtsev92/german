<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="02-add-foreign-key-to-verb-properties" author="your-name">
        <!-- Удаляем старый столбец verb_id -->
        <dropColumn tableName="verb_properties" columnName="verb_id"/>

        <!-- Добавляем новый столбец с внешним ключом -->
        <addColumn tableName="verb_properties">
            <column name="verb_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="verb_properties"
                baseColumnNames="verb_id"
                referencedTableName="verb"
                referencedColumnNames="id"
                constraintName="fk_verb_properties_verb"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
